# Invoice Automation Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# FOLDERS
# =============================================================================
# Where to watch for incoming timesheet PDFs
WATCH_FOLDER=/data/invoices/incoming

# Where to archive completed workflows
ARCHIVE_FOLDER=/data/invoices/archive

# =============================================================================
# GMAIL OAUTH
# =============================================================================
# Path to OAuth credentials JSON (downloaded from Google Cloud Console)
GMAIL_CREDENTIALS_FILE=/config/credentials.json

# Path where refresh token will be stored after first auth
GMAIL_TOKEN_FILE=/config/token.json

# =============================================================================
# TELEGRAM
# =============================================================================
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your chat ID (send /start to @userinfobot to get it)
TELEGRAM_CHAT_ID=123456789

# =============================================================================
# EMAIL ADDRESSES
# =============================================================================
# Your Gmail account (sender, used for OAuth)
FROM_EMAIL=you@gmail.com

# Manager who approves timesheets
MANAGER_EMAIL=manager@company.com

# Invoicing department (CC on approval request)
INVOICING_DEPT_EMAIL=invoicing@company.com

# Accountant who sends invoices
ACCOUNTANT_EMAIL=accountant@example.com

# =============================================================================
# INVOICE SETTINGS
# =============================================================================
# Hourly rate for invoice calculation
HOURLY_RATE=10

# Currency symbol
CURRENCY=EUR

# =============================================================================
# LLM (GEMINI)
# =============================================================================
# Google AI Studio API key
GEMINI_API_KEY=AIzaSy...

# =============================================================================
# EMAIL MONITORING
# =============================================================================
# Seconds between email inbox checks
GMAIL_POLL_INTERVAL=10

# =============================================================================
# EMAIL MATCHING
# =============================================================================
# Comma-separated keywords that indicate approval (case-insensitive)
APPROVAL_KEYWORDS=approved,schvalene,schvalujem,suhlasim,ok,v poriadku
